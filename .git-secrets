[secrets]
patterns = [
    # API Keys and Tokens
    '[a-zA-Z0-9_]{32}',           # Generic API key pattern
    '(A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}',  # AWS Keys
    '(sk|pk)_[live|test]_[0-9a-zA-Z]{24,99}',  # Stripe API keys

    # Authentication
    'bearer [a-zA-Z0-9_-]+\.[a-zA-Z0-9_-]+\.[a-zA-Z0-9_-]+',  # JWT tokens
    'authorization[:=][[:space:]]*[bB]earer[[:space:]]+[a-zA-Z0-9_\-\.]+',  # Bearer tokens

    # Certificates and Keys
    '-----BEGIN.*PRIVATE KEY-----',
    '-----BEGIN.*RSA PRIVATE KEY-----',
    '-----BEGIN.*DSA PRIVATE KEY-----',
    '-----BEGIN.*EC PRIVATE KEY-----',
    '-----BEGIN.*PGP PRIVATE KEY BLOCK-----',

    # Development credentials
    'security@audiomaster\.example\.com',
    'TEAM_ID=.*',
    'PROVISIONING_PROFILE_UUID=.*',
    'APPLE_ID=.*',
    'APP_SPECIFIC_PASSWORD=.*',
    'BUNDLE_IDENTIFIER=.*',
    'DEVELOPMENT_TEAM=.*',

    # Build server credentials
    'REMOTE_MAC_HOST=.*',
    'REMOTE_MAC_USER=.*',
    'SSH_PRIVATE_KEY=.*'
]

# Allowed patterns (exceptions)
allowed = [
    # Example patterns that are safe to commit
    'BUNDLE_IDENTIFIER=com.audiomaster',
    'security@audiomaster.example.com'  # Public contact email
]
